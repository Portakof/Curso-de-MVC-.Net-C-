<!--//De esta manera la vista recibe un modelo en este caso el creado "EditUserViewModels"-->
@model CursoMVC.Models.ViewModels.EditUserViewModels
@{
    ViewBag.Title = "Editar usuario";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <!---->
        <!--"User" es el controller al cual sera direccionado ene este caso "UserController"-->
        <!--"Edit" es el metodo a direccionar y se usa "FormMethod.Post" especificando cual de los dos metodos debe ser-->
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.HiddenFor(d => d.Id)
            @Html.AntiForgeryToken()    //Es para seguridad, crea un token interno para bloquear peticiones externas

            @Html.ValidationMessage("error", new { @class = "text-danger" })   //Muestra informacion de algun error

            //Se usan elementos terminados en "For" para que automaticamente se enlacen con los atributos que vienen del modelo "UserViewModels"
            //Esto facilita las cosas porque funciona tambien con el controller

            @Html.LabelFor(d => d.Email)
            @Html.TextBoxFor(d => d.Email, new { @class = "form-control" })
            @Html.ValidationMessage("Email", new { @class = "text-danger" })<br />

            @Html.LabelFor(d => d.Password)
            @Html.PasswordFor(d => d.Password, new { @class = "form-control" })
            @Html.ValidationMessage("Password", new { @class = "text-danger" })<br />

            @Html.LabelFor(d => d.ConfirmPassword)
            @Html.PasswordFor(d => d.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })<br />

            @Html.LabelFor(d => d.Edad)
            @Html.TextBoxFor(d => d.Edad, new { @class = "form-control" })
            @Html.ValidationMessage("Edad", new { @class = "text-danger" })<br />

            <div style="text-align:right">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>

        }
    </div>
</div>
